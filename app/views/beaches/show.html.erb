<h1><%= @beach.name %></h1>
<p><%= @beach.description %></p>
<p><%= @beach.street1 %></p>
<p><%= @beach.street2 %></p>
<p><%= @beach.city %></p>
<p><%= @beach.state %></p>
<p><%= @beach.zip %></p>
<p><%= @beach.entrance_fee %></p>
<p><%= image_tag(@beach.picture_url) %></p>
<p><% @beach.amenities.each do |amenity| %>
      <%= amenity.name %>
      <br/>
    <% end %></p>
<br/>
<% if @reviews.first.nil? %>
  No reviews exist.
  <br/>
  <% if user_signed_in? %>
    <%= link_to "Add a Review", new_beach_review_path(@beach) %>
  <% end %>
<% else %>
  <% if user_signed_in? %>
    <%= link_to "Add a Review", new_beach_review_path(@beach) %>
  <% end %>
  <% @reviews.each do |review| %>
    <% @review = review %>
    <br/>
      Rating: <%= review.rating %>
    <br/>
      Description: <%= review.description %>
    <br/>
    <div class='review' >Score: <div id='review-<%= @review.id %>-score'><%= @review.score %></div>
    <% if user_signed_in? %>
          <%= link_to "Upvote", review_upvotes_path(review),
          method: :post,
          class: "review-#{@review.id} upvote",
          id: "upvote-#{review.id}" %>
        <br/>
          <%= link_to "Downvote", review_downvotes_path(review),
          method: :post,
          class: "review-#{@review.id} downvote",
          id: "downvote-#{review.id}" %>
      <br/>
    <% end %>
    <br/>
    </div>
    <% if user_signed_in? && review.user == current_user %>
      <li><%= link_to "Edit Review", edit_beach_review_path(@beach, review)%></li>
    <% end %>
    <% if (user_signed_in? && review.user == current_user) || (user_signed_in? && current_user.role == 'admin') %>
      <li><%= link_to "Delete Review", "/beaches/#{@beach.id}/reviews/#{review.id}",
        id: "delete-review#{review.id}",
        class: "btn btn-small btn-danger form-control",
        method: :delete, data: { confirm: "Are you sure?" }
      %></li>
    <% end %>
  <% end %>
  <%= paginate @reviews %>
  <hr/>
<% end %>
<%= link_to "All Beaches", beaches_path %>
<% if @beach.user == current_user %>
  <br/>
  <%= link_to "Update Beach", edit_beach_path(@beach) %>
<% end %>
  <br>
<% if (@beach.user == current_user) || (user_signed_in? && current_user.role == 'admin') %>
  <%= link_to "Delete Beach", beach_path(@beach),
    class: "btn btn-small btn-danger form-control",
    # Why does this delete-alert pop up twice?
    method: :delete, data: { confirm: "Are you sure?" } %>
<% end %>
